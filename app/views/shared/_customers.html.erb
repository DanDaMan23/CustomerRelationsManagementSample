<% if customers.empty? %>
    <p>There are no Customers</p>
<% else %>
    <div class="container">
        <div class="row">
            <% customers.each do |customer| %>
                <div class="col-sm-12 col-md-6 col-lg-3 mb-3">
                    <%= render 'shared/customer', customer: customer %>
                </div>
            <% end %>
        </div>
    </div>
<% end %>